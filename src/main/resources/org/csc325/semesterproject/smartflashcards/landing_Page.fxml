<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@stylesheets/landing_page.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.csc325.semesterproject.smartflashcards.landing_page_controller">
    <children>
        <VBox alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="600.0">
            <children>
                <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="logout-button" text="Log out" />
            </children>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="800.0" spacing="10.0">
                    <children>
                        <Label fx:id="welcomeLabel" styleClass="welcome_label" text="Welcome!" />
                        <VBox alignment="CENTER" prefWidth="800.0">
                            <children>
                                <Label styleClass="title_label" text="Flash Card Study App" />
                                <Label styleClass="subtitle_label" text="Create, Manage, and Study your flashcards" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox alignment="CENTER" maxHeight="650.0" VBox.vgrow="ALWAYS">
                    <children>
                        <GridPane hgap="30.0" maxHeight="400.0" maxWidth="1000.0" vgap="30.0" VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Total Sets -->
                                <VBox alignment="CENTER" spacing="8" styleClass="stat_box">
                                    <children>
                                        <Label fx:id="totalSetsLabel" styleClass="stat_number" text="0" />
                                        <Label styleClass="regular_label" text="Total Sets" />
                                    </children>
                                </VBox>

                                <!-- Current Set Dropdown -->
                                <VBox alignment="CENTER" spacing="8" styleClass="stat_box" GridPane.columnIndex="1">
                                    <children>
                                        <Label styleClass="regular_label" text="Current Set" />
                                        <ComboBox fx:id="setDropdown" onAction="#handleSetChange" prefWidth="160" />
                              <Button fx:id="removeButton" onAction="#removeSet" mnemonicParsing="false" text="Remove Current Set" />
                                    </children>
                                </VBox>

                                <!-- Play box -->
                                <VBox alignment="CENTER" onMouseClicked="#handlePlay" spacing="8" styleClass="clickable_box" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <children>
                                        <Label styleClass="primary_label" text="Play" />
                                        <Label styleClass="regular_label" text="Play games to help memorize your cards" />
                                    </children>
                                </VBox>

                                <!-- Study box -->
                                <VBox alignment="CENTER" onMouseClicked="#handleStudy" spacing="8" styleClass="clickable_box" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <Label styleClass="primary_label" text="Study" />
                                        <Label styleClass="regular_label" text="Review your cards and test yourself" />
                                    </children>
                                </VBox>

                                <!-- Manage box -->
                                <VBox alignment="CENTER" onMouseClicked="#handleCreate" spacing="8" styleClass="clickable_box" GridPane.rowIndex="1">
                                    <children>
                                        <Label styleClass="primary_label" text="Manage" />
                                        <Label styleClass="regular_label" text="Create and Edit Flashcards and Sets" />
                                    </children>
                                </VBox>

                                <!-- Accuracy box -->
                                <VBox alignment="CENTER" spacing="8" styleClass="stat_box" GridPane.columnIndex="2">
                                    <children>
                                        <Label styleClass="stat_number" text="-----" />
                                        <Label styleClass="regular_label" text="Accuracy" />
                                    </children>
                                </VBox>

                            </children>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets bottom="60.0" left="30.0" right="30.0" top="60.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>
