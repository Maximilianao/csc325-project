<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVbox" alignment="CENTER" prefHeight="500.0" prefWidth="700.0" stylesheets="@stylesheets/registration_screen.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.csc325.semesterproject.smartflashcards.RegistrationController">
    <padding>
        <Insets bottom="50.0" top="50.0" />
    </padding>
    <VBox alignment="TOP_CENTER" maxHeight="450.0" maxWidth="450.0" prefHeight="400.0" prefWidth="400.0" styleClass="registration_container" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER" minHeight="87.0" prefHeight="100.0" prefWidth="200.0">
            <Label text="Sign Up">
                <font>
                    <Font name="System Bold" size="33.0" />
                </font>
            </Label>
        </HBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
         <VBox layoutX="40.0" layoutY="10.0" spacing="5.0">
            <children>
               <Label text="Email (Required)" />
               <TextField fx:id="emailInputField" minHeight="40.0" prefHeight="40.0" styleClass="input_field" />
               <Label fx:id="emailErrorLabel" styleClass="error_label" />
            </children>
         </VBox>
            <VBox spacing="5.0">
                <Label text="Username (Required)" />
                <TextField fx:id="userInputField" minHeight="40.0" prefHeight="40.0" styleClass="input_field" />
                <Label fx:id="usernameErrorLabel" styleClass="error_label" />
            </VBox>
            <VBox spacing="5.0">
                <Label text="Password (Required)" />
                <PasswordField fx:id="passwordInputField" minHeight="40.0" prefHeight="40.0" styleClass="input_field" />
                <Label fx:id="passwordErrorLabel" styleClass="error_label" />
                <padding>
                    <Insets bottom="22.0" />
                </padding>
            </VBox>
        </VBox>
        <VBox alignment="TOP_CENTER" maxHeight="40.0" minHeight="36.0" prefHeight="200.0" prefWidth="100.0">
            <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#signUp" prefHeight="40.0" prefWidth="110.0" styleClass="primary_button" text="Sign Up">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
        </VBox>
        <HBox alignment="CENTER" minHeight="87.5" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
            <Label text="Already have an account?">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Hyperlink onAction="#viewLoginScreen" styleClass="nav_text" text="Login">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Hyperlink>
        </HBox>
    </VBox>
</VBox>
