<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVbox"
      prefHeight="600.0"
      prefWidth="800.0"
      styleClass="root"
      stylesheets="@stylesheets/landing_page.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.csc325.semesterproject.smartflashcards.play_landing_controller">

    <children>

        <!-- Back Button -->
        <VBox alignment="CENTER_LEFT" prefHeight="27.0" prefWidth="600.0">
            <children>
                <Button fx:id="backButton"
                        onAction="#handleBack"
                        text="Back to main page"
                        styleClass="logout-button"/>
            </children>
            <padding>
                <Insets bottom="10" left="10" top="10"/>
            </padding>
        </VBox>

        <!-- Title + Accuracy -->
        <VBox alignment="TOP_CENTER" spacing="8">
            <children>
                <Label styleClass="title_label" text="Play"/>

                <!-- Accuracy placeholder -->
                <VBox alignment="CENTER" spacing="4">
                    <children>
                        <Label styleClass="regular_label" text="Accuracy"/>
                        <Label styleClass="stat_number" text="---"/>
                    </children>
                </VBox>

                <Label styleClass="subtitle_label"
                       text="Choose a game to help memorize your cards"/>
            </children>
            <padding>
                <Insets top="20"/>
            </padding>
        </VBox>

        <!-- Centered Game Options -->
        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>

                <HBox alignment="CENTER" spacing="40">
                    <children>

                        <!-- Game 1 -->
                        <VBox alignment="CENTER" spacing="8"
                              styleClass="clickable_box"
                              onMouseClicked="#launchGame1"
                              prefWidth="180" prefHeight="140">
                            <children>
                                <Label styleClass="primary_label" text="Game 1"/>
                                <Label styleClass="regular_label" text="Coming Soon"/>
                            </children>
                        </VBox>

                        <!-- Game 2 (CENTERED) -->
                        <VBox alignment="CENTER" spacing="8"
                              styleClass="clickable_box"
                              onMouseClicked="#launchGame2"
                              prefWidth="180" prefHeight="140">
                            <children>
                                <Label styleClass="primary_label" text="Game 2"/>
                                <Label styleClass="regular_label" text="Coming Soon"/>
                            </children>
                        </VBox>

                        <!-- Game 3 -->
                        <VBox alignment="CENTER" spacing="8"
                              styleClass="clickable_box"
                              onMouseClicked="#launchGame3"
                              prefWidth="180" prefHeight="140">
                            <children>
                                <Label styleClass="primary_label" text="Game 3"/>
                                <Label styleClass="regular_label" text="Coming Soon"/>
                            </children>
                        </VBox>

                    </children>
                </HBox>

            </children>

            <padding>
                <Insets top="40" bottom="40"/>
            </padding>
        </VBox>

    </children>
</VBox>
